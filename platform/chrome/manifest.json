{
  "manifest_version": 2,
  "version": "1.1.0",
  "name": "Repository Search",
  "short_name": "Find Git",
  "description": "Quickly search all your repositories across multiple GitHub instances",
  "author": "Clay Reimann",
  "homepage_url": "https://github.com/clayreimann/github-search-extension",

  "omnibox": { "keyword" : "git" },
  "icons": {
    "16": "assets/repo-icon@16.png",
    "32": "assets/repo-icon@32.png",
    "64": "assets/repo-icon@64.png",
    "128": "assets/repo-icon@128.png"

  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "persistent": true,
    "scripts": [
      "chrome.min.js"
    ]
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}
